struct person {
    char *name;
    unsigned int age;
};
struct person *
new_person(const char *name, unsigned age)
{
    struct person *p = malloc(sizeof(struct person));
    if (!p) return NULL;
    p->name = name;
    p->age  = age;
    return p;
}
